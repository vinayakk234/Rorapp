<h1>Products</h1>

<table>
 <%= link_to 'home',root_path%>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Mfd</th>
      <th>Weight</th>
      <th>colour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |pro| %>
      <tr>
        <td><%= pro.title %></td>
        <td><%= pro.price %></td>
        <td><%= pro.mfd %></td>
        <td><%= pro.weight %></td>
         <td><%=pro.colour %></td>
        <td><%= link_to 'Show', pro %></td>
        <td><%= link_to 'Edit', edit_product_path(pro) %></td>
        <td><%= link_to 'Destroy', pro, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <br>
    
    <% end %>
  </tbody>
</table>
 
